# Docker environment variables
PORT=3001
NODE_ENV=production

# Redis configuration
REDIS_URL=redis://redis:6379
REDIS_PASSWORD=your_secure_redis_password_here

# Frontend configuration
FRONTEND_URL=http://localhost:80
DOMAIN_NAME=localhost:3001

# Application settings
APP_NAME=luckygo
APP_VERSION=1.0.0

# Security Configuration (change these in production!)
SESSION_SECRET=your_session_secret_here_change_in_production
JWT_SECRET=your_jwt_secret_here_change_in_production

# Repository Configuration
# Options: 'memory' or 'sqlite'
REPOSITORY_TYPE=sqlite

# SSL/TLS (for production with nginx)
# SSL_CERT_PATH=/etc/nginx/ssl/cert.pem
# SSL_KEY_PATH=/etc/nginx/ssl/key.pem

# Database configuration (for future database integration)
# DATABASE_URL=postgresql://username:password@postgres:5432/luckygo
# DATABASE_HOST=postgres
# DATABASE_PORT=5432
# DATABASE_NAME=luckygo
# DATABASE_USER=luckygo_user
# DATABASE_PASSWORD=secure_db_password
