{
  "name": "luckygo",
  "version": "1.0.0",
  "description": "Clean Architecture Express application with template engine and Redis",
  "main": "dist/infrastructure/web/server.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/infrastructure/web/server.js",
    "dev": "ts-node-dev --respawn --transpile-only --inspect=0.0.0.0:9229 src/infrastructure/web/server.ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint src/**/*.ts",
    "format": "prettier --write src/**/*.ts",
    "docker:dev": "docker-compose -f docker-compose.dev.yml up -d",
    "docker:dev:down": "docker-compose -f docker-compose.dev.yml down",
    "docker:prod": "docker-compose up -d",
    "docker:prod:down": "docker-compose down",
    "docker:build": "docker-compose build",
    "docker:logs": "docker-compose logs -f",
    "frontend:install": "cd frontend && npm install",
    "frontend:dev": "cd frontend && npm start",
    "frontend:build": "cd frontend && npm run build",
    "dev:full": "concurrently \"npm run dev\" \"npm run frontend:dev\"",
    "install:all": "npm install && npm run frontend:install",
    "repo:memory": "node switch-repository.js memory",
    "repo:sqlite": "node switch-repository.js sqlite",
    "repo:status": "node switch-repository.js status",
    "test:sqlite": "ts-node test-sqlite-repositories.ts"
  },
  "dependencies": {
    "@types/bcryptjs": "^3.0.0",
    "@types/cookie-parser": "^1.4.9",
    "@types/express-session": "^1.18.2",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/sqlite3": "^5.1.0",
    "bcryptjs": "^3.0.2",
    "compression": "^1.7.4",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-session": "^1.18.2",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.0",
    "redis": "^4.6.10",
    "socket.io": "^4.8.1",
    "sqlite3": "^5.1.7",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@types/compression": "^1.7.5",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.8",
    "@types/morgan": "^1.9.9",
    "@types/node": "^20.10.0",
    "@types/uuid": "^9.0.7",
    "@typescript-eslint/eslint-plugin": "^6.13.1",
    "@typescript-eslint/parser": "^6.13.1",
    "concurrently": "^8.2.2",
    "eslint": "^8.54.0",
    "jest": "^29.7.0",
    "prettier": "^3.1.0",
    "ts-jest": "^29.1.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.3.2"
  },
  "keywords": [
    "clean-architecture",
    "express",
    "typescript",
    "redis",
    "template-engine"
  ],
  "author": "Your Name",
  "license": "MIT"
}
